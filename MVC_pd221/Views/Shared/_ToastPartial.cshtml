<div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 11">
    <div data-bs-delay="2000" id="generalToast" class="toast text-white bg-success" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-body text-center">Test</div>
    </div>
</div>

@{
    string? showMsg = TempData["ToastMessage"] as string;
}
@if (showMsg != null)
{
    <script>
        var generalToast = document.getElementById('generalToast');

        console.log(generalToast);

        // set toast message
        generalToast.querySelector('.toast-body').textContent = "@showMsg";

        var toast = new bootstrap.Toast(generalToast);
        toast.show();
    </script>
}