@model EditProductModel;
<h1>Edit Product</h1>

<form class="row g-3" method="post" asp-action="Edit">
    <div class="col-md-8">
        <label asp-for=Name class="form-label">Name</label>
        <input asp-for=Name type="text" class="form-control" placeholder="Enter product name">
        <span asp-validation-for=Name class="form-text text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for=Price class="form-label">Price</label>
        <input asp-for=Price type="number" class="form-control" placeholder="Enter product price">
        <span asp-validation-for=Price class="form-text text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="CategoryId" class="form-label">State</label>
        <select asp-items="ViewBag.Categories" asp-for=CategoryId class="form-select">
            <option selected disabled>Choose...</option>
        </select>
    </div>
    <div class="col-4">
        <label asp-for=Discount class="form-label">Discount</label>
        <input asp-for=Discount type="number" min="0" class="form-control" placeholder="Enter product discount">
        <span asp-validation-for=Discount class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for=ImageUrl class="form-label">Image URL</label>
        <input asp-for=ImageUrl type="text" readonly class="form-control" placeholder="Enter image URL">
        <span asp-validation-for=ImageUrl class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for=Description class="form-label">Description</label>
        <textarea id="description-input" asp-for=Description class="form-control" rows="3" placeholder="Enter product description"></textarea>
        <span asp-validation-for=Description class="form-text text-danger"></span>
    </div>

    <div class="col-12">
        <div class="form-check">
            <input asp-for=InStock class="form-check-input" type="checkbox">
            <label asp-for=InStock class="form-check-label">
                In Stock
            </label>
        </div>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Edit</button>
    </div>
</form>

@section Styles {
    <link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet' type='text/css' />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <partial name="_FroalaEditorPartial.cshtml" model='"#description-input"' />
}