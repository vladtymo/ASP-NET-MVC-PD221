@model List<Contact>;
@{
    // reset default layout
    //Layout = null;
}

<h2 class="text-center">Contact List</h2>

@if(Model.Count > 0)
{
    <ul>
        @foreach (var item in Model)
        {
            <li>[@item.Id] @item.Name - @item.Phone</li>
        }
    </ul>
}
else
{
    <p class="text-center">No contacts here yet...</p>
}
